     <div id="content" class="row">
        <section id="contenido" class="col-md-12">

          <div class="row ">
            <div class="col-md-5 align-self-center col-sm-offset-3 container">

              <h1><span class="fa fa-sign-in"></span> Login </h1>
              <!-- show any messages that come back with authentication -->
              <% if (message.length > 0) { %>
                <div class="alert alert-danger"><%= message %></div>
              <% } %>


              <!-- LOGIN FORM -->
              <form action="/admin/login" method="post">
                <div class="form-group">
                  <label>Email</label>
                  <input type="text" class="form-control" name="email">
                </div>
                <div class="form-group">
                  <label>Password</label>
                  <input type="password" class="form-control" name="password">
                </div>

                <button type="submit" class="btn btn-primary btn-lg">Login</button>
              </form>

              <hr>

              <p>Need an account? <a href="/signup">Signup</a></p>
              <p>Or go <a href="/">home</a>.</p>
              <p>O reg√≠strate con <a href="/auth/facebook" class="btn btn-primary"><span class="fa fa-facebook"></span> Facebook </a></p>


              </div>
            </div>


        </section>

    </div>



