<!DOCTYPE html>
<html lang="en">

<head>
<%- include('includes/metaHead'); %>
  <!--Nuestros estilos :v -->
  <link rel="stylesheet" type="text/css" href="css/login.css">


</head>

<body>
  
<!-- =====================================================
              HEADER
======================================================== -->
<%- include('includes/headMain'); %> 

 <!-- =====================================================
              CONTENIDO
======================================================== -->             
      


<div class="row ">
<div class="col-md-5 align-self-center col-sm-offset-3 container">
      
        <h1><span class="fa fa-sign-in"></span> Ingresar </h1>
        <!-- show any messages that come back with authentication -->
        <% if (message.length > 0) { %>
          <div class="alert alert-danger"><%= message %></div>
        <% } %>


        <!-- LOGIN FORM -->
        <form action="/login" method="post">
          <div class="form-group">
            <label>Email</label>
            <input type="text" class="form-control" name="email">
          </div>
          <div class="form-group">
            <label>Contraseña</label>
            <input type="password" class="form-control" name="password">
          </div>

          <button type="submit" class="btn btn-primary btn-lg">Ingresar</button>
        </form>

        <hr>

        <p>¿Necesitas una cuenta? <a href="/signup">Registrar</a></p>

      
    </div>
  </div>




<!-- =====================================================
              FOOTER
======================================================== -->



<%- include('includes/externalSource'); %> 


  <script src="/js/global.js"></script>
  
  </body>
</html>