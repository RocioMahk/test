<!DOCTYPE html>
<html lang="en">

<head>
<%- include('includes/metaHead'); %>
  <!--Nuestros estilos :v -->
  <%- include('includes/metaAdmin'); %>
</head>

<body>


<!-- =====================================================
              HEADER
======================================================== -->
  <%- include('includes/headAdmin'); %>

 <!-- =====================================================
              CONTENIDO
======================================================== -->
  <%
  if (data.publicacion == undefined)
  { // Formulario vacio
    %>
     
        <section id="contenido" class="col-md-12">
          <div class="col-xs-12 mx-auto" style="width: 100%; text-align: center;  font-size: 25px;">
          Nueva Imagen
          </div>

          <div class="row justify-content-end">
            <div>
            <a class="btn btn-lg btn-primary" href="/admin/publicaciones" role="button">Regresar</a>
            </div>
          </div>

                    <div class="form-group row">
            <label for="example-email-input" class="col-2 col-form-label"  id="id"></label>
            <input class="form-control" type="hidden" id="publicacionId" name="publicacionId">
          </div>


          <div class="form-group row">
            <label for="example-text-input" class="col-2 col-form-label">Tìtulo</label>
            <div class="col-10">
              <input class="form-control" type="text" value="" id="titulo">
            </div>
          </div>

          <div class="form-group row">
            <label for="example-text-input" class="col-2 col-form-label">Imagen</label>
            <div class="col-10">
              <p>Holi! aqui va una imagen</p>
            </div>
          </div>

          
          <div class="form-group row">
            <label for="exampleTextarea" class="col-2 col-form-label">Descripcion</label>
            <div class="col-10">
              <textarea class="form-control" id="contenido" rows="5"></textarea>
            </div>
          </div>


          <div class="form-group row">
            <label for="example-text-input" class="col-2 col-form-label">Autores</label>
            <div class="col-10">
              <p>Holi! aqui va autor</p>
            </div>
          </div>


          <div class="form-group row">
            <label for="example-date-input" class="col-2 col-form-label">Publicado</label>
            <div class="col-10">
              <input class="form-control" type="text" id="publicado">
            </div>
          </div>

          <div class="form-group row">
            <legend class="col-form-legend col-sm-2">Estado</legend>
            <div class="col-sm-10">
              <div class="form-check">
                <label class="form-check-label">
                  <input class="form-check-input" type="radio" name="estado" id="gridRadios1" value="option1" checked>
                  Original
                </label>
              </div>
              <div class="form-check">
                <label class="form-check-label">
                  <input class="form-check-input" type="radio" name="estado" id="gridRadios2" value="option2">
                  Retoque
                </label>
              </div>
            </div>
          </div>      
         
          <br>
          <div class="row justify-content-center">
            <div>
            <input class="btn btn-lg btn-primary col-md-12" type="submit" value="Guardar" id="guardaPublicacion">
            </div>

  <%}
  else
  {%>

 
        <section id="contenido" class="col-md-12">
          <div class="col-xs-12 mx-auto" style="width: 100%; text-align: center;  font-size: 25px;">
          Modificar Imagen
          </div>

          <div class="row justify-content-end">
            <div>
            <a class="btn btn-lg btn-primary" href="/admin/publicaciones" role="button">Regresar</a>
            </div>
          </div>

                    <div class="form-group row">
            <label for="example-email-input" class="col-2 col-form-label" value="" id="id"></label>
            <input class="form-control" type="hidden" id="userId" name="publicacionId" value="<%= data.publicacion._id %>">
          </div>


          <div class="form-group row">
            <label for="example-text-input" class="col-2 col-form-label">Tìtulo</label>
            <div class="col-10">
              <input class="form-control" type="text" value="<%= data.publicacion.titulo %>" id="titulo">
            </div>
          </div>

          <div class="form-group row">
            <label for="example-text-input" class="col-2 col-form-label">Imagen</label>
            <div class="col-10">
              <p>Holi! aqui va una imagen</p>
            </div>
          </div>

          
          <div class="form-group row">
            <label for="exampleTextarea" class="col-2 col-form-label">Descripción</label>
            <div class="col-10">
              <textarea class="form-control" id="contenido" rows="5" value="<%= data.publicacion.contenido %>"></textarea>
            </div>
          </div>


          <div class="form-group row">
            <label for="example-text-input" class="col-2 col-form-label">Usuario</label>
            <div class="col-10">
              <p>Holi! aqui va un autor</p>
            </div>
          </div>
          
          <div class="form-group row">
            <legend class="col-form-legend col-sm-2">Estado</legend>
            <div class="col-sm-10">
              <div class="form-check">
                <label class="form-check-label">
                  <input class="form-check-input" type="radio" name="estado" id="gridRadios1" value="activo"
                  <% if(data.publicacion.estado == 'original'){ %>
                  checked
                  <% } %> >
                  Original
                </label>
              </div>
              <div class="form-check">
                <label class="form-check-label">
                  <input class="form-check-input" type="radio" name="estado" id="gridRadios2" value="revision"
                  <% if(data.publicacion.estado == 'retoque'){ %>
                  checked
                  <% } %> >
                  Retoque
                </label>
              </div>

            </div>
          </div>

          <br>
          <div class="row justify-content-center">
            <div>
            <input class="btn btn-lg btn-primary col-md-12" type="submit" value="Guardar" id="guardaPublicacion">
            </div>
          </div>


        </section>

    <% }
    %>




<%- include('includes/externalSource'); %>
<%- include('includes/externalSourceAdmin'); %>

  </body>
</html>